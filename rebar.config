{erl_opts, [debug_info]}.

{deps, [
  {lfe, {git, "http://github.com/rvirding/lfe", {branch, "develop"}}},
  {'lfe-sshd', {git, "https://github.com/oubiwann/lfe-sshd", {branch, "master"}}},
  {epgsql, {git, "https://github.com/epgsql/epgsql", {tag, "4.4.0"}}},
  {gen_smtp, {git, "https://github.com/gen-smtp/gen_smtp", {tag, "0.15.0"}}},
  {logjam, {git, "https://github.com/lfex/logjam", {branch, "release/1.0.x"}}}
]}.

{plugins, [
  {rebar3_lfe, {git, "http://github.com/lfe-rebar3/rebar3_lfe", {branch, "master"}}},
  rebar3_proper
]}.

{profiles, [
  {test, [
    {erl_opts, [nowarn_export_all]},
    {deps, [proper, recon]}
  ]},
  {prod, [
    {relx, [{dev_mode, false}, {include_erts, true}]}
  ]}
]}.

{provider_hooks, [
    {pre, [
        {compile, {lfe, compile}}
    ]}
]}.

{xref_checks, [
    undefined_function_calls, undefined_functions, locals_not_used,
    deprecated_function_calls, deprecated_functions
]}.

{dialyzer, [
    {warnings, [unknown]}
]}.

{relx, [{release, {'hxgm30.mush', "0.1.0"},
         [crypto,
          sasl,
          lfe,
          logjam,
          %%'lfe-sshd',
          %%'hxgm30.store',
          %%'hxgm30.mail',
          %%'hxgm30.world',
          'hxgm30.mush'
        ]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{alias, [
  {build, [compile, release]},
  {repl, [{lfe, repl}]},
  {dev, [compile, release, {lfe, repl}]},
  {coverage, [{proper, "-c"},  {cover, "-v --min_coverage=0"}]},
  {check, [compile,
           release,
           xref,
           %dialyzer,
           coverage]}
]}.